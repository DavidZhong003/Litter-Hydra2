<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/item_margin"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_slide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/top_item_title_textcolor"
        android:textSize="@dimen/top_item_title_textsize"
        tools:text="几百个监控都没拍到脸"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_slide_img_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_slide_img_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_slide_img_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_slide_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/top_item_title_textcolor_gray"
            android:textSize="@dimen/top_item_small_textsize"
            tools:text="温州晚报"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/tv_slide_source"
            android:layout_toRightOf="@id/tv_slide_source"
            android:textColor="@color/top_item_title_textcolor_gray"
            android:textSize="@dimen/top_item_small_textsize"
            tools:text="12:13"/>


        <TextView
            android:id="@+id/tv_img_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/item_atlas"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/top_item_title_textcolor_gray"
            android:textSize="@dimen/top_item_small_textsize"
            tools:text="6"/>

        <TextView
            android:id="@+id/tv_top_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/top_item_title_textcolor_gray"
            android:textSize="@dimen/top_item_small_textsize"
            tools:text="1234"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/item_comment"/>


        <ImageView
            android:id="@+id/iv_top_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/item_delete"/>

    </RelativeLayout>

</LinearLayout>