<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.doive.nameless.litter_hydra"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--悬浮窗-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--震动-->
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".ui.news.details.NewsDocDetailActivity">

        </activity>

        <activity android:name=".ui.news.details.NewWebActivity">

        </activity>

        <activity android:name=".ui.news.top.TopNewsActivity">

        </activity>

        <activity android:name=".ui.news.pic.PictureDetailActivity"/>

        <activity android:name=".ui.video.test.TvActivity">

        </activity>
        <activity android:name=".ui.video.live.VideoLiveActivity">

        </activity>

    </application>

</manifest>